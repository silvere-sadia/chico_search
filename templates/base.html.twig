<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
       <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-header">
            <div class="logo">
                <span class="logo-icon"><i class="fas fa-filter"></i></span>
                <span class="logo-text">Filtres</span>
            </div>
        </div>
        
        <div class="sidebar-content">
            <div class="filter-section">
                <div class="section-title">
                    <i class="fas fa-search"></i>
                    <span class="section-text">Recherche</span>
                </div>
                <div class="form-group">
                    <label for="search" class="section-text">Mot-clé</label>
                    <input type="text" id="search" class="form-control" placeholder="Rechercher...">
                </div>
            </div>
            
            <div class="filter-section">
                <div class="section-title">
                    <i class="fas fa-tags"></i>
                    <span class="section-text">Catégories</span>
                </div>
                <div class="checkbox-group">
                    <label class="checkbox-item">
                        <input type="checkbox" checked>
                        <span class="section-text">Électronique</span>
                    </label>
                    <label class="checkbox-item">
                        <input type="checkbox">
                        <span class="section-text">Vêtements</span>
                    </label>
                    <label class="checkbox-item">
                        <input type="checkbox">
                        <span class="section-text">Maison & Jardin</span>
                    </label>
                    <label class="checkbox-item">
                        <input type="checkbox" checked>
                        <span class="section-text">Sports & Loisirs</span>
                    </label>
                </div>
            </div>
            
            <div class="filter-section">
                <div class="section-title">
                    <i class="fas fa-sliders-h"></i>
                    <span class="section-text">Filtres avancés</span>
                </div>
                <div class="form-group">
                    <label for="price-range" class="section-text">Plage de prix</label>
                    <select id="price-range" class="form-control">
                        <option value="">Tous les prix</option>
                        <option value="0-50">Moins de 50€</option>
                        <option value="50-100">50€ - 100€</option>
                        <option value="100-200">100€ - 200€</option>
                        <option value="200+">Plus de 200€</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="sort-by" class="section-text">Trier par</label>
                    <select id="sort-by" class="form-control">
                        <option value="recent">Plus récent</option>
                        <option value="price-asc">Prix croissant</option>
                        <option value="price-desc">Prix décroissant</option>
                        <option value="popular">Plus populaire</option>
                    </select>
                </div>
            </div>
            
            <div class="filter-section">
                <button class="btn btn-primary btn-block">
                    <i class="fas fa-filter"></i>
                    <span class="section-text">Appliquer les filtres</span>
                </button>
                <button class="btn btn-block" style="margin-top: 10px; background: rgba(255,255,255,0.1); color: white;">
                    <i class="fas fa-redo"></i>
                    <span class="section-text">Réinitialiser</span>
                </button>
            </div>
        </div>
    </div>

    <!-- Overlay for mobile -->
    <div class="overlay" id="overlay"></div>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Horizontal Menu -->
        <nav class="horizontal-menu">
            <div class="menu-left">
                <button class="toggle-btn text-primary border bordr-primary" id="toggleSidebar">
                    <i class="fas fa-bars"></i>
                </button>
                <a href="{{path('app_home')}}" class="menu-item active">
                    <i class="fas fa-home"></i>
                    <span>Accueil</span>
                </a>
                <a href="{{path('app_admin_unit_index')}}" class="menu-item">
                    <i class="fas fa-chart-bar"></i>
                    <span>Unit</span>
                </a>
                <a href="{{path('app_admin_group_index')}}" class="menu-item">
                    <i class="fas fa-shopping-cart"></i>
                    <span>Group</span>
                </a>
                <a href="{{path('app_admin_chimical_maker')}}" class="menu-item">
                    <i class="fas fa-cog"></i>
                    <span>Chimical</span>
                </a>
            </div>
            
            <div class="menu-right">
                <a href="#" class="menu-item">
                    <i class="fas fa-bell"></i>
                </a>
                <div class="user-profile">
                    <div class="avatar">JD</div>
                    <span>Jean Dupont</span>
                </div>
            </div>
        </nav>
        
        <!-- Content Body -->
        <div class="content-body">
            {% block body %}{% endblock %}
        </div>
    </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
        
        <script>
            // Elements DOM
            const sidebar = document.querySelector('.sidebar');
            const toggleBtn = document.getElementById('toggleSidebar');
            const mainContent = document.querySelector('.main-content');
            const overlay = document.getElementById('overlay');
            const menuItems = document.querySelectorAll('.menu-item');

            // Toggle sidebar on desktop
            toggleBtn.addEventListener('click', () => {
                sidebar.classList.toggle('collapsed');
                mainContent.classList.toggle('expanded');
            });

            // Set active menu item
            menuItems.forEach(item => {
                item.addEventListener('click', (e) => {
                    if (!item.classList.contains('user-profile')) {
                        // e.preventDefault();
                        menuItems.forEach(i => i.classList.remove('active'));
                        item.classList.add('active');
                    }
                });
            });

            // Close sidebar when clicking on overlay (mobile)
            overlay.addEventListener('click', () => {
                sidebar.classList.remove('active');
                overlay.classList.remove('active');
            });

            // Show sidebar on mobile when menu item is clicked
            const mobile = document.querySelector('.mobile-toggle');
            if (mobile) {
                mobile.addEventListener('click', () => {
                    sidebar.classList.add('active');
                    overlay.classList.add('active');
                });
            }

            // Close sidebar when window is resized to desktop size
            window.addEventListener('resize', () => {
                if (window.innerWidth > 992) {
                    sidebar.classList.remove('active');
                    overlay.classList.remove('active');
                }
            });
        </script>
    </body>
</html>
