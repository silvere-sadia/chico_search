{% extends 'base.html.twig' %}

{% block title %}Unit{% endblock %}

{% block body %}
    <h1>Unit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ unit.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ unit.name }}</td>
            </tr>
            <tr>
                <th>Symbol</th>
                <td>{{ unit.symbol }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ unit.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ unit.createdAt ? unit.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ unit.updatedAt ? unit.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DeletedAt</th>
                <td>{{ unit.deletedAt ? unit.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_unit_index') }}" class="btn btn-secondary">back to list</a>

    <a href="{{ path('app_admin_unit_edit', {'id': unit.id}) }}" class="btn btn-warning">edit</a>

    {{ include('admin/unit/_delete_form.html.twig') }}
{% endblock %}
