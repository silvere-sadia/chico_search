{% extends 'base.html.twig' %}

{% block title %}Unit index{% endblock %}

{% block body %}
    <h1>Unit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Symbol</th>
                <th>IsActive</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for unit in units %}
            <tr>
                <td>{{ unit.id }}</td>
                <td>{{ unit.name }}</td>
                <td>{{ unit.symbol }}</td>
                <td>{{ unit.isActive ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_admin_unit_show', {'id': unit.id}) }}">show</a>
                    <a href="{{ path('app_admin_unit_edit', {'id': unit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_unit_new') }}" class="btn btn-primary">Create new</a>
{% endblock %}
