{# templates/admin/criteria/new_group.html.twig #}
{# templates/admin/criteria/edit_group.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}
    {% if form.vars.data.id %}
        Modifier le groupe - {{ form.vars.data.name }}
    {% else %}
        Nouveau groupe de critères
    {% endif %}
{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-layer-group me-2"></i>
                        {% if form.vars.data.id %}
                            Modifier le groupe
                        {% else %}
                            Créer un nouveau groupe de critères
                        {% endif %}
                    </h4>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.name, {
                                'attr': {
                                    'class': 'form-control-lg',
                                    'placeholder': 'Ex: Filtres Produits'
                                }
                            }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.code, {
                                'attr': {
                                    'class': 'form-control-lg',
                                    'placeholder': 'Ex: product_filters'
                                },
                                'help': 'Code unique utilisé pour identifier le groupe dans le système'
                            }) }}
                        </div>
                    </div>

                    {{ form_row(form.description, {
                        'attr': {
                            'rows': 3,
                            'placeholder': 'Description du groupe de critères...'
                        }
                    }) }}

                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.displayMode, {
                                'attr': {'class': 'form-select-lg'}
                            }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.sortOrder, {
                                'attr': {'class': 'form-control-lg'}
                            }) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            {{ form_row(form.isMultiple) }}
                        </div>
                        <div class="col-md-4">
                            {{ form_row(form.isActive) }}
                        </div>
                        <div class="col-md-4">
                            {{ form_row(form.maxSelections, {
                                'attr': {'min': 0}
                            }) }}
                        </div>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save me-2"></i>
                            {% if form.vars.data.id %}
                                Modifier le groupe
                            {% else %}
                                Créer le groupe
                            {% endif %}
                        </button>
                        <a href="{{ path('admin_criteria_index') }}" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-arrow-left me-2"></i>Retour
                        </a>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>

            {# Aide sur les modes d'affichage #}
            {% if not form.vars.data.id %}
            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Guide des modes d'affichage
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <h6><i class="fas fa-caret-down text-primary me-2"></i>Select unique</h6>
                            <p class="text-muted small">Menu déroulant pour sélectionner une seule option</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <h6><i class="fas fa-list text-primary me-2"></i>Select multiple</h6>
                            <p class="text-muted small">Menu déroulant pour sélectionner plusieurs options</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <h6><i class="fas fa-dot-circle text-primary me-2"></i>Boutons radio</h6>
                            <p class="text-muted small">Boutons ronds pour sélection exclusive</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <h6><i class="fas fa-check-square text-primary me-2"></i>Cases à cocher</h6>
                            <p class="text-muted small">Cases pour sélections multiples indépendantes</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <h6><i class="fas fa-keyboard text-primary me-2"></i>Champ texte</h6>
                            <p class="text-muted small">Champ de saisie libre pour recherche textuelle</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <h6><i class="fas fa-sliders-h text-primary me-2"></i>Plage de valeurs</h6>
                            <p class="text-muted small">Slider pour sélectionner une fourchette de valeurs</p>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}