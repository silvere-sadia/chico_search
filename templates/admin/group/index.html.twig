{% extends 'base.html.twig' %}

{% block title %}Group index{% endblock %}

{% block body %}
    <h1>Group index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Position</th>
                <th>Color</th>
                <th>IsActive</th>
                <th>ChildsLimit</th>
                <th>Crit√®res</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for group in groups %}
            <tr>
                <td>{{ group.id }}</td>
                <td>{{ group.name }}</td>
                <td>{{ group.position }}</td>
                <td>{{ group.color }}</td>
                <td>{{ group.isActive ? 'Yes' : 'No' }}</td>
                <td>{{ group.childsLimit }}</td>
                <td>
                    {% for item in group.criterias %}
                        <span class="text-success">{{item.name}}</span>
                        {{loop.last ? '' : ', '}}
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('app_admin_group_show', {'id': group.id}) }}">show</a>
                    <a href="{{ path('app_admin_group_edit', {'id': group.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_group_new') }}" class="btn btn-primary">Create new</a>
{% endblock %}
