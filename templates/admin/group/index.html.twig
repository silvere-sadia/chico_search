{% extends 'base.html.twig' %}

{% block title %}Group index{% endblock %}

{% block body %}
    <h1>Group index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Position</th>
                <th>Color</th>
                <th>ChildsLimit</th>
                {# <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>DeletedAt</th> #}
                <th>IsActive</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for group in groups %}
            <tr>
                <td>{{ group.id }}</td>
                <td>{{ group.name }}</td>
                <td>{{ group.position }}</td>
                <td>{{ group.color }}</td>
                <td>{{ group.childsLimit }}</td>
                {# <td>{{ group.createdAt ? group.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ group.updatedAt ? group.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ group.deletedAt ? group.deletedAt|date('Y-m-d H:i:s') : '' }}</td> #}
                <td>{{ group.isActive ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_admin_group_show', {'id': group.id}) }}">show</a>
                    <a href="{{ path('app_admin_group_edit', {'id': group.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_group_new') }}" class="btn btn-primary">Create new</a>
{% endblock %}
