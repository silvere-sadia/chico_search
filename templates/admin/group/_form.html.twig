{{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.position) }}
    {{ form_row(form.color) }}
    {{ form_row(form.childsLimit) }}
    {{ form_row(form.isActive) }}
    {{ form_errors(form.criterias) }}
    <div class="col">
        <h6>Crit√®res</h6>
        <div class="p-4">
            <ul
                class="criterias mb-3"
                data-index="{{ form.criterias|length > 0 ? form.criterias|last.vars.name + 1 : 0 }}"
                data-prototype="{{ form_widget(form.criterias.vars.prototype)|e('html_attr') }}"
            >
                {% for criteriaField in form.criterias %}
                    <ol class="border border-light-subtle rounded p-2 m-1">
                        {{ form_errors(criteriaField) }}
                        {{ form_widget(criteriaField) }}
                    </ol>
            {% endfor %}
            </ul>
            <button type="button" class="add_item_link btn btn-primary" data-collection-holder-class="criterias">
            <i class="fa fa-plus"></i> Criteria
            </button>
        </div>
    </div>
    <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}

